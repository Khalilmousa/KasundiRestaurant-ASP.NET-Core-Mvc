@using Microsoft.EntityFrameworkCore.Infrastructure
@model KasundiRestaurant.Models.ViewModels.IndexViewModel

<br />

@if (Model.Coupons.ToList().Count > 0)
{
    <div class="border">
        <div class="carousel" data-ride="carousel" data-interval="2500">
            @for (int i = 0; i < Model.Coupons.Count(); i++)
            {
                if (i == 0)
                {
                    <div class="carousel-item active">
                        @{
                            var base64 = Convert.ToBase64String(Model.Coupons.ToList()[i].Picture);
                            var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                        }

                        <img src="@imgsrc" height="50px" class="d-block width=auto" />
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        @{
                            var base64 = Convert.ToBase64String(Model.Coupons.ToList()[i].Picture);
                            var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                        }

                        <img src="@imgsrc" height="50px" class="d-block width=auto" />
                    </div>
                }
            }
        </div>
    </div>
}

<br />
<br />

<div class="backgrondwhite container">

    <ul id="menu-filters" class="menu-filter-list list-inline text-center">
        <li class="filter active btn btn-secondary ml-1 mr-1">Show All</li>

        @foreach (var item in Model.Categories)
        {
            <li class="filter ml-1 mr-1">@item.Name</li>
        }
    </ul>

</div>


<div class="backgrondwhite container">
    @foreach (var category in Model.Categories)
    {
        <div class="row" id="menu-wrapper">
            <partial name="_ThumbnailAreaPartial" model="Model.MenuItems.Where(c=>c.Category.Name.Equals(category.Name))" />
        </div>

    }
</div>